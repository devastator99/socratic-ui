{
  "name": "socratic-app",
  "version": "1.0.0",
  "private": true,
  "main": "project/index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "web:8084": "expo start --web --port 8084",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json}'",
    "prepare": "husky install"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "2.1.2",
    "expo": "53.0.22",
    "expo-document-picker": "~13.1.6",
    "expo-status-bar": "~2.2.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.76.6",
    "react-native-svg": "15.11.2",
    "react-native-svg-transformer": "1.3.0",
    "react-native-web": "^0.20.0",
    "@expo/metro-runtime": "~5.0.4",
    "expo-router": "~5.1.5",
    "expo-constants": "~17.1.7",
    "expo-linking": "~7.1.7",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1"
  },
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@react-native/babel-preset": "^0.73.18",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.5",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.19.123",
    "@types/react": "^18.2.67",
    "babel-preset-expo": "~13.0.0",
    "@eslint/js": "^8.57.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.1.0",
    "globals": "^15.9.0",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "jest-expo": "~53.0.10",
    "lint-staged": "^15.2.0",
    "metro-minify-terser": "^0.83.1",
    "prettier": "^3.2.5",
    "react-test-renderer": "18.2.0",
    "typescript-eslint": "^7.18.0",
    "typescript": "^5.4.5"
  },
  "jest": {
    "preset": "jest-expo",
    "testEnvironment": "jsdom",
    "setupFiles": [
      "<rootDir>/project/jest.setup.env.js"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/project/$1"
    },
    "testMatch": [
      "**/__tests__/**/*.test.{js,jsx,ts,tsx}",
      "**/?(*.)+(spec|test).{js,jsx,ts,tsx}"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg|@sentry/.*))"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/coverage/**",
      "!**/node_modules/**",
      "!**/babel.config.js",
      "!**/jest.setup.js"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
